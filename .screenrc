# An alternative hardstatus to display a bar at the bottom listing the window names and highlighting the current windowname in blue. 
# (This is only enabled if there is no hardstatus setting for your terminal)
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "
altscreen on
caption always
caption string "%= %-w%L>%{= BW}%n*%t%{-}%52<%+w %L="
defscrollback 30000
startup_message off
defsilence on
vbell off
layout autosave on
